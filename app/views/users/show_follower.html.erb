<div class="container-fluid top-blank2">
    <div class="row">
    	<div class ="col-md-12">

    		<div class ="col-md-9 col-md-offset-2">
			
			<table class="table table-hover">
			  	<thead>
			  		<tr>
			  			<th>ID</th>
			  			<th></th>
			  			<th>ユーザー名<br>好きな漫画・イラスト</th>
			  		</tr>
			  	</thead>
			  	<% @user.followers.each do |user| %>
				<tr>
				  <td><%= user.id %>　<%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "/images/no_image.jpg", size: "80x80", class: "img-circle" %></td>
				  <td></td>
				  <td><%= user.name %><br><br><%= user.fav_manga %><br><%= user.fav_illust %></td>
				  <td><%= link_to '詳細', user_path(user), class: "btn btn-info" %></td>
				</tr>
				<% end %>
			</table>
			
		</div>

	</div>
  </div>
</div>