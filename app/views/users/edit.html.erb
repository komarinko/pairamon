<div class="container">
    <div class="row">
        <div class ="col-md-12">
        	<div class ="col-md-6">
        		<img src= "http://placehold.jp/24/cccccc/ffffff/400x400.png?text=placehold.jp">
        	</div>
        	<div class ="col-md-6 ">
				<h1 class="text-center">ユーザー編集画面</h1>
				<div>
					<%= form_for(@user) do |f| %>
					<p>ユーザー名：<%= f.text_field :name, autofocus: true, autocomplete: "Name", class:"form-control" %></p>
					<p>メールアドレス：<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></p>

					<p>好きな漫画：<%= f.text_field :fav_manga, autofocus: true, autocomplete: "fav_manga", class:"form-control" %></p>
					<p>好きなイラスト：<%= f.text_field :fav_illust, autofocus: true, autocomplete: "fav_illust", class:"form-control" %></p>
					<p><%= f.submit "変更を保存", class:"btn btn-success center-block btn-block" %></p>
					<% end %>
				</div>
			</div>


        </div>
    </div>
</div>