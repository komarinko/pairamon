<div class="container">
    <div class="row">
        <div class ="col-md-12">
			<table border="1" width="200" height="100" bgcolor="#9999ff">
				<tr>
					<td width="100" height="100">
					<div style="height:100px; width:1180px; overflow-x:auto;overflow-y:hidden;">
                        <% @user.following.each do |user| %>
                        <%= link_to user_path(user) do %>
                        <%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
                        <% end %>
                    <% end %>
					</div>
					</td>
				</tr>
			</table>
        </div>
    </div>
    <div class="row">
        <div class ="col-md-1">
        	<p><%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "70x70" %></p>
        </div>
        <div class ="col-md-2">
        	<p><%= @user.name %>のルーム<br>ユーザーid： <%= @user.id %></p>
        </div>
        <div class ="col-md-3">
        	<p>いいね<br>
                <% sum = 0 %>
                <% @user.post_images.each do |post_image| %>
                    <% sum = post_image.favorites.size + sum %>
                <% end %>
                <%= sum %>
            </p>
        </div>
        <div class ="col-md-2">
            <section class="stats">
              <%= render 'users/stats' %>
            </section>
        	<p>フォロワー</p>
        </div>
        <div class ="col-md-2">
        	<div class="btn btn-info center-block btn-block">
                <%= render 'follow_form' if user_signed_in? %>
            フォロー
            </div>
        </div>
        <% if @user.id == current_user.id %>
        <div class ="col-md-1">
        	<%= link_to "編集", edit_user_path, class:"btn btn-success center-block btn-block" %>
        </div>
        <% end %>
        <div class ="col-md-1">
        	<%= link_to "退会", user_path(@user.id), method: :delete, class:"btn btn-danger center-block btn-block" %>
        </div>
    </div>
    <div class="row">
	    <div class ="col-md-8">
			<div style="height:600px; width:700px; background-color:blue; overflow-y:scroll;">
				<div class="form-control">
					<% @post_images.each do |post_image| %>
					<%= attachment_image_tag post_image, :image, size: "550x550" %><br>
					<div class="well well-sm">
					<%= post_image.caption %>
					</div>
                        <div class="well well-sm">
                            <% if post_image.favorited_by?(current_user) %>
                                <%= link_to post_image_favorites_path(post_image), method: :delete do %>
                                  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                                  <%= post_image.favorites.count %> いいね
                                <% end %>
                            <% else %>

                                <%= link_to post_image_favorites_path(post_image), method: :post do %>
                                  <i class="fa fa-heart-o" aria-hidden="true"></i>
                                  <%= post_image.favorites.count %> いいね
                                <% end %>
                            <% end %>
                        </div>
					<% end %>
				</div>
			</div>
		</div>
	       <div class ="col-md-4">
			<div style="height:600px; width:400px; background-color:red;  overflow-y:scroll;">
				<div class="form-control">
				<% @user.post_comments.reverse.each do |post_comment| %>
					<div class="well well-sm">
                        <%= link_to user_path(post_comment.user) do %>
                        <%= attachment_image_tag post_comment.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "70x70" %>
                        <% end %>
						id：<%= post_comment.user.id %>
						<%= post_comment.user.name %>
						<%= post_comment.created_at.strftime('%m/%d %H時%M分') %><br>
						<%= post_comment.comment %>
					</div>
				<% end %>
				</div>
			</div>
		</div>
    </div>

    <div class="row">
        <div class ="col-md-3">
        	<%= link_to "画像投稿", new_post_image_path, class:"btn btn-info center-block btn-block", tabindex: 3 %>
        </div>
        <%= form_for [@user, @post_comment] do |f| %>
        <div class ="col-md-6 form-group">
        	 <%= f.text_area :comment, class: "form-control",placeholder: "フリーコメント欄に入力 　※コメント打った後ならTABキーで再度入力待ちにできるよ！", tabindex: 1 %>
        </div>
        <div class ="col-md-3 form-group">
        	<%= f.submit "送信する",  class: "btn btn-info center-block btn-block", tabindex: 2 %>
        </div>
        <% end %>
	</div>
</div>