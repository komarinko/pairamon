<div class="container">
    <div class="row">
        <div class ="col-md-12">
			<table border="1" width="200" height="100" bgcolor="#9999ff">
				<tr>
					<td width="100" height="100">
					<div style="height:70px; width:1180px; overflow-x:auto;overflow-y:hidden;">
					<img src= "http://placehold.jp/24/cccccc/ffffff/70x70.png?text=placehold.jp">
					<img src= "http://placehold.jp/24/cccccc/ffffff/100x100.png?text=placehold.jp">
					<img src= "http://placehold.jp/24/cccccc/ffffff/100x100.png?text=placehold.jp">
					<img src= "http://placehold.jp/24/cccccc/ffffff/100x100.png?text=placehold.jp">
					<img src= "http://placehold.jp/24/cccccc/ffffff/100x100.png?text=placehold.jp">
					セル2aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
					</div>
					</td>
				</tr>
			</table>
        </div>
    </div>
    <div class="row">

        <div class ="col-md-1">
        	<img src= "http://placehold.jp/24/cccccc/ffffff/70x70.png?text=placehold.jp">
        </div>
        <div class ="col-md-2">
        	<p><%= @user.name %>のルーム<br>ユーザーid： <%= @user.id %></p>
        </div>
        <div class ="col-md-3">
        	<p>いいね</p>
        </div>
        <div class ="col-md-2">
        	<p>フォロワー</p>
        </div>
        <div class ="col-md-2">
        	<div class="btn btn-info center-block btn-block">フォロー</div>
        </div>
        <% if @user.id == current_user.id %>
        <div class ="col-md-1">
        	<%= link_to "編集", edit_user_path, class:"btn btn-success center-block btn-block" %>
        </div>
        <% end %>
        <div class ="col-md-1">
        	<div class="btn btn-danger center-block btn-block">退会</div>
        </div>
    </div>
    <div class="row">
	    <div class ="col-md-8">
			<div style="height:600px; width:700px; background-color:blue; overflow-y:scroll;">
				<div class="form-control">
					<% @post_images.each do |post_image| %>
					<%= attachment_image_tag post_image, :image, size: "550x550" %><br>
					<div class="well well-sm">
					<%= post_image.caption %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	       <div class ="col-md-4">
			<div style="height:600px; width:400px; background-color:red;  overflow-y:scroll;">
				<div class="form-control">
				<% @user.post_comments.reverse.each do |post_comment| %>
					<div class="well well-sm">
						id：<%= post_comment.post_image_id %>
						<%= post_comment.user.name %>
						<%= post_comment.created_at.strftime('%m/%d　%H時%M分') %><br>
						<%= post_comment.comment %>
					</div>
				<% end %>
				</div>
			</div>
		</div>
    </div>

    <div class="row">
        <div class ="col-md-3">
        	<%= link_to "画像投稿", new_post_image_path, class:"btn btn-info center-block btn-block" %>
        </div>
        <%= form_for [@user, @post_comment] do |f| %>
        <div class ="col-md-6 form-group">
        	 <%= f.text_area :comment, class: "form-control",placeholder: "コメントをここに" %>
        </div>
        <div class ="col-md-3 form-group">
        	<%= f.submit "送信する",  class: "btn btn-info center-block btn-block" %>
        </div>
        <% end %>
	</div>
</div>