<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>", class= "btn btn-info center-block btn-block">
    <strong id="following" class="stat">
      フォロー<%= @user.following.count %>
    </strong>
  </a><br>
  <a href="<%= followers_user_path(@user) %>", class= "btn btn-info center-block btn-block">
    <strong id="followers" class="stat">
      フォロワー<%= @user.followers.count %>
    </strong>
  </a>
</div>